@model ProductVM

<form method="post">
    <input asp-for="Product.Id" hidden/>
    <div class="border-3 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create product </h2>
            <hr />

        </div>
        <div class="mb-3 row">
            <label class="p-0">
                product Name
            </label>
            <input type="text" asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Price
            </label>
            <input type="text" asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price"></span>
        </div>
        <div class="mb-3 row">
            <label class="p-0">
                Discounted Price
            </label>
            <input type="text" asp-for="Product.DiscountPrice" class="form-control" />
            <span asp-validation-for="Product.DiscountPrice"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Category
            </label>

        </div>
        <div class="mb-3 row">
            <label class="p-0">
                Quantity
            </label>
            <input type="text" asp-for="Product.Quantity" class="form-control" />
            <span asp-validation-for="Product.Quantity"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Weight
            </label>
            <input type="text" asp-for="Product.Weight" class="form-control" />
            <span asp-validation-for="Product.Weight"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Description
            </label>
            <input type="text" asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Image url
            </label>
            <input type="text" asp-for="Product.Image" class="form-control" />

        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Category
            </label>
            <select asp-items="ViewBag.CategoryList" asp-for="Product.CategoryId" class="form-select">
                <option value="" disabled selected>-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId"></span>
        </div>


        <div class="row ">
            <div class="col-6 col-md-3 p-0">
                <button type="submit" class="btn btn-primary form-control"> Edit Product </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="product" asp-action="Index" class="btn btn-outline-secondary form-control"> Back to List </a>
            </div>
        </div>
        .

    </div>


</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}