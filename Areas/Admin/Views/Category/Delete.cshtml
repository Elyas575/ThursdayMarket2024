@model Category

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="border-3 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category </h2>
            <hr />

        </div>
        <div class="mb-3 row">
            <label class="p-0">
                Category Name
            </label>
            <input type="text" asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">
                Display Order
            </label>
            <input type="text" asp-for="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row ">
            <div class="col-6 col-md-3 p-0">
                <button type="submit" class="btn btn-danger form-control"> Delete Category </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> Back to List </a>
            </div>
        </div>
    </div>


</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}